mixin box-icon(name,color)
    box-icon(name=name color=color size="28px")&attributes(attributes)

doctype doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Main Page 
        link(rel="stylesheet", href="/style.css")
        script(src="https://unpkg.com/boxicons@latest/dist/boxicons.js") 
        link(rel="preconnect", href="https://fonts.gstatic.com")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap")
    body 
        header
            .header__container 
                .menu  
                    +box-icon("menu","white")(size="35px")
                    +box-icon("search","white")
                .logo
                    img(src="/img/Logo.svg", alt="logo", srcset="")
                    span.logo__name EXA
                .bag
                    +box-icon("user","white")
                    +box-icon("shopping-bag-alt","white")(type="solid")
    main 
        .nuevos-productos
            .main-new-product
            .info-new-product 
                .text-new-product
                    span DX VINTAGE'S 41MM
                    span Lorem ipsum dolor sit amet consectetur adipisicing elit. Adipisci est ipsa corporis.
                .buttom-new-product
                    button GET YOURS

        .articulos
        .oferta 
        .contacto
    footer 
        .footer__container