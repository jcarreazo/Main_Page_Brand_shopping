mixin box-icon(name,color)
    box-icon(name=name color=color size="28px")&attributes(attributes)

mixin top-colection(Brand,background,button)
    .feature-top-product(style=`background: url(${background}) no-repeat;background-size: cover;`)
                    .feature-content   
                        span=Brand
                        +button-basic(button)

mixin button-basic(content)
    button.button-generic=content

mixin buy-type(title,background,position)
    .articles-section-container 
         .articles-section(style=`background: url(${background}) no-repeat;background-size: cover;background-position:${position}`)
                .articles-shadow
                span=title

