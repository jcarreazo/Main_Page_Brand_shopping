mixin box-icon(name,color)
    box-icon(name=name color=color size="28px")&attributes(attributes)

mixin top-colection(Brand,background,button)
    .feature-top-product(style=`background: url(${background}) no-repeat;background-size: cover;`)
                    .feature-content   
                        span=Brand
                        +button-basic(button)

mixin button-basic(content)
    a( href="http://",target="_blank",rel="noopener noreferrer").button-generic=content

mixin buy-type(title,background,position)
    .articles-section-container 
         .articles-section(style=`background: url(${background}) no-repeat;background-size: cover;background-position:${position}`)
                .articles-shadow
                span=title

mixin new-product(background,top,title,subtitle,button,padding1,padding2,space,bposition)
    .brand-new-product(style=`background: url(${background}) no-repeat;background-size: cover;padding:${padding1} 0 ${padding2} 0;background-position: ${bposition} 10%;`)
        .brand-new-info
            span.new(style=`letter-spacing: ${space};`)=top
            span.new-title=title  
            span.new-subtitle=subtitle 
            +button-basic(button)    

mixin gift(background,title,subtitle,button)
   .gift-container(style=`background: url(${background}) no-repeat;background-size: cover;background-position: 40% 70%;`)   
                .gift-info
                    span.new-title=title  
                    span.new-subtitle=subtitle 
                    +button-basic(button) 

